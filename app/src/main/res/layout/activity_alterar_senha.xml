<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlterarSenha">

    <TextView
        android:id="@+id/tvAltereSenha"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ALTERE SUA SENHA"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="80dp"
        android:textColor="#292828"
        android:textAlignment="center"
        android:background="@drawable/sombra"/>

    <TextView
        android:id="@+id/tvSenhaAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha atual:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvAltereSenha"
        app:layout_constraintStart_toStartOf="@id/txtSenhaAtual"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/txtSenhaAtual"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textPassword"
        android:hint=" | Senha atual"
        android:maxLength="30"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvSenhaAtual"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#F28907"
        android:drawableStart="@drawable/ic_baseline_lock_open_24"
        android:background="@drawable/bordas"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvNovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova senha:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtSenhaAtual"
        app:layout_constraintStart_toStartOf="@id/txtNovaSenha"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/txtNovaSenha"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textPassword"
        android:hint=" | Nova senha"
        android:maxLength="30"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvNovaSenha"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#F28907"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:background="@drawable/bordas"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvConfirmeNovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirme a nova senha:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtNovaSenha"
        app:layout_constraintStart_toStartOf="@id/txtConfirmarNovaSenha"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/txtConfirmarNovaSenha"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textPassword"
        android:hint=" | Confirme a nova senha"
        android:maxLength="30"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmeNovaSenha"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#F28907"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:background="@drawable/bordas"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmarNovaSenha"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:backgroundTint="#DC7D0A"/>


</androidx.constraintlayout.widget.ConstraintLayout>