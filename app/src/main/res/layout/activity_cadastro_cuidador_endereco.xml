<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCuidadorEndereco">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tituloBoasVindas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="-20dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#F28907"
            />

        <TextView
            android:id="@+id/txtLogradouro"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Logradouro"
            app:layout_constraintTop_toBottomOf="@id/txtNumero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#F28907"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:textSize="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/txtBairro"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Bairro"
            app:layout_constraintTop_toBottomOf="@id/txtLogradouro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#F28907"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:textSize="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/txtCidade"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Cidade"
            app:layout_constraintTop_toBottomOf="@id/txtBairro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#F28907"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:textSize="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <EditText
            android:id="@+id/txtComplemento"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint=" | Complemento(Opcional)"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtCidade"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_back_hand_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCep"
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content"
            android:hint=" | CEP"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tituloBoasVindas"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_back_hand_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            />

        <Button
            android:id="@+id/btnProcurarCEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Buscar CEP"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtCep"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/txtNumero"
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content"
            android:hint=" | Número"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/btnProcurarCEP"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_back_hand_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            />

        <TextView
            android:id="@+id/tvExtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações adicionais"
            app:layout_constraintTop_toBottomOf="@id/txtComplemento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txtLimitacoes"
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content"
            android:hint=" | Limitações"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvExtras"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_back_hand_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            />

        <EditText
            android:id="@+id/txtBiografia1"
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content"
            android:hint=" | Biografia"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtLimitacoes"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_accessibility_new_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

        <EditText
            android:id="@+id/txtPreferencias"
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content"
            android:hint=" | Prefêrencias"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtBiografia1"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_accessibility_new_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

        <EditText
            android:id="@+id/txtValorHora"
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="wrap_content"
            android:hint=" | Preço por hora"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtPreferencias"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_baseline_accessibility_new_24"
            android:background="@drawable/bordas"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

        <Button
            android:id="@+id/btnCadastrarCuidador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtValorHora"
            android:text="CADASTRAR-SE"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>