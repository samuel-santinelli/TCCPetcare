<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoricoServicoCliente">

    <ScrollView
        android:id="@+id/tela"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Agendamentos Disponiveis"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/txtTitulo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/tela"
        android:layout_marginTop="-50dp">

        <View
            android:id="@+id/retanguloMenu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#F28907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/hexagono"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bordas"/>

        <ImageView
            android:id="@+id/intentServicos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_add_orange_24"
            app:layout_constraintStart_toStartOf="@id/hexagono"
            app:layout_constraintEnd_toEndOf="@id/hexagono"
            app:layout_constraintBottom_toBottomOf="@id/hexagono"
            app:layout_constraintTop_toTopOf="@id/hexagono"
            android:paddingBottom="5dp"
            android:elevation="30dp"
            />

        <ImageView
            android:id="@+id/iconeCasa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintBottom_toBottomOf="@id/retanguloMenu"
            app:layout_constraintStart_toStartOf="@id/retanguloMenu"
            app:layout_constraintTop_toTopOf="@id/retanguloMenu"/>

        <ImageView
            android:id="@+id/intentAgendamentos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="@id/retanguloMenu"
            app:layout_constraintTop_toTopOf="@id/retanguloMenu"
            app:layout_constraintStart_toEndOf="@id/iconeCasa"/>


        <ImageView
            android:id="@+id/iconePessoa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_baseline_person_white_24"
            app:layout_constraintBottom_toBottomOf="@id/retanguloMenu"
            app:layout_constraintEnd_toEndOf="@id/retanguloMenu"
            app:layout_constraintTop_toTopOf="@id/retanguloMenu"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/intentHistorico"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_history_24"
            app:layout_constraintBottom_toBottomOf="@id/retanguloMenu"
            app:layout_constraintTop_toTopOf="@id/retanguloMenu"
            app:layout_constraintEnd_toStartOf="@id/iconePessoa"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>