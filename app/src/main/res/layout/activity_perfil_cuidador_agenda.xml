<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilCuidadorAgenda"
    layout_width=""
    layout_height="">

    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent">

        <View
            android:id="@+id/viewPerfil"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/image_23"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/viewPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-50dp"
            app:cardCornerRadius="100dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dona_lurdes"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNomeCuidador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maria Lurdes"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cvFoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvBanner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/tvNomeCuidador"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAvaliacao"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardBackgroundColor="#F28907">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="4.3"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAnimaisCuidados"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cvAvaliacao"
                    app:layout_constraintEnd_toStartOf="@id/cvPremium"
                    app:cardBackgroundColor="#F28907">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_pets2_24"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="4.3"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPremium"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardBackgroundColor="#F28907">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_verified_24"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="4.3"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"/>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvAgenda"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Agenda"
            app:layout_constraintEnd_toStartOf="@id/tvBio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvBanner"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordas2"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAgenda"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvDetalhes"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Detalhes"
            app:layout_constraintStart_toEndOf="@id/tvBio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAgenda"
            android:gravity="center"/>

        <CalendarView
            android:id="@+id/calendario"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalhes"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordas"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marcar"
            app:layout_constraintTop_toBottomOf="@+id/calendario"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
