<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarSenha">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/vwEqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci minha senha!"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:textColor="#F28907"
        android:layout_marginTop="-15dp"
        />

    <TextView
        android:id="@+id/vwTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nós da PETCare lamentamos que tenha esquecido sua senha, mas não se preocupe, trabalharemos para recuperá-la o mais rápido possível!"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/vwEqueciSenha"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint=" | Email"
        android:maxLength="100"
        android:singleLine="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/vwTexto"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#F28907"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:background="@drawable/bordas"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="RECUPERAR SENHA"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:backgroundTint="#DC7D0A"/>

</androidx.constraintlayout.widget.ConstraintLayout>