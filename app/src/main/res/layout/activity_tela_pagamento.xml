<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPagamento2">

    <TextView
        android:id="@+id/tituloCompra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Já estamos quase lá..."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tituloData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tituloCompra"
        android:text="Para Quando?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tituloInicio"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Selecione a data de início"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/tituloData"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/caixaInicio"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/bordas"
        app:layout_constraintTop_toBottomOf="@id/tituloInicio"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tituloFim"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Selecione a data de término"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/caixaInicio"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/caixaFim"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/bordas"
        app:layout_constraintTop_toBottomOf="@id/tituloFim"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tituloServico"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/caixaFim"
        android:text="Selecione o tipo de serviço:"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:id="@+id/spnTipoServico"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bordas"
        app:layout_constraintTop_toBottomOf="@id/tituloServico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:entries="@id/tituloServico"/>

    <TextView
        android:id="@+id/servicoConfirmar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/spnTipoServico"
        android:text="Serviço"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/servicoTotal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/servicoConfirmar"
        android:text="Total"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/servicoTipo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/servicoConfirmar"
        android:text="Total"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Confirmar Pagamento"
        android:background="@drawable/bordas2"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/servicoTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>