<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="285dp"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/txtFoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"/>

            <TextView
                android:id="@+id/txtCpf2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE TESTE TESTE TESTE TESTE"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/txtCliente"
                app:layout_constraintTop_toBottomOf="@+id/txtCliente" />

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE TESTE TESTE TESTE TESTE"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/txtCliente"
                />


            <TextView
                android:id="@+id/txtPet"
                android:text="TESTE TESTE TESTE TESTE TESTE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/txtFoto"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE TESTE TESTE TESTE"
                app:layout_constraintStart_toStartOf="@+id/txtPet"
                app:layout_constraintTop_toBottomOf="@id/txtPet" />

            <TextView
                android:id="@+id/txtDataInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE TESTE TESTE TESTE"
                app:layout_constraintBottom_toTopOf="@+id/txtDataFinal"
                app:layout_constraintStart_toStartOf="@+id/txtDataFinal"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/txtDataFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE TESTE TESTE TESTE"
                app:layout_constraintBottom_toTopOf="@+id/txtValor"
                app:layout_constraintStart_toStartOf="@+id/txtValor" />

            <TextView
                android:id="@+id/txtTipoServico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE TESTE TESTE TESTE"
                app:layout_constraintBottom_toTopOf="@+id/btnRecusar"
                app:layout_constraintEnd_toEndOf="@+id/btnAceitar" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btnAceitar"
                app:layout_constraintStart_toStartOf="@id/container"
                android:text="R$ 50090.90"
                android:textSize="28dp"/>

            <Button
                android:id="@+id/btnAceitar"
                android:text="Aceitar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"/>
            <Button
                android:id="@+id/btnRecusar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Recusar"
                app:layout_constraintBottom_toBottomOf="@id/container"
                app:layout_constraintEnd_toStartOf="@id/btnAceitar"
                android:layout_marginEnd="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>