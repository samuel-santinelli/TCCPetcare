<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/bordas"
        />

    <TextView
        android:id="@+id/nomeCliente"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do cliente"
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_margin="15dp"
        />

    <TextView
        android:textSize="20dp"
        android:id="@+id/telefoneCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 40028922"
        android:maxLength="11"
        app:layout_constraintStart_toEndOf="@id/nomeCliente"
        app:layout_constraintTop_toTopOf="@id/nomeCliente"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:maxHeight="119dp"
        app:layout_constraintTop_toBottomOf="@id/nomeCliente"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintEnd_toEndOf="@id/container"
        android:layout_margin="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>